<div class="d-flex justify-content-center align-items-center gap-4 mb-5">
    <h1>New review</h1>
    <%= link_to 'Back to restaurant details', restaurants_url, class: "btn btn-secondary" %>
</div>

<div class="container w-50">
    <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, label: "Your review" %>
        <%= f.input :rating, label: "Rating (1 to 5)", as: :select, collection: 1..5 %>
        <%= f.button :submit, class: "btn btn-secondary" %>
    <% end %>
</div>
